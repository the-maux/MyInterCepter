<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Coordonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="200dp"
                android:layout_height="56dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:subtitle="v7.31"
                app:title="Tcpdump">

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/topToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/action_settings"
                android:layout_toRightOf="@+id/toolbar"
                android:focusable="false"
                android:focusableInTouchMode="false">


            </RelativeLayout>

            <ImageView
                android:id="@+id/wiresharkMode"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_toStartOf="@+id/action_settings"
                android:src="@drawable/wireshark" />

            <ImageButton
                android:id="@+id/action_settings"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:baselineAlignBottom="false"
                android:src="@android:drawable/ic_menu_manage" />

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_grey_800"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TopBarLayout">

            <RelativeLayout
                android:id="@+id/nmapConfEditorLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/material_grey_800"
                android:elevation="4dp"
                android:padding="8dp"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/targetSelectionner"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:background="@color/material_grey_900"
                    android:elevation="5dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/monitorHost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName"
                        android:paddingLeft="8dp"
                        android:text="Name" />
                </RelativeLayout>

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerTypeScan"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_below="@+id/targetSelectionner"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:elevation="4dp"
                    android:text="DNS filter"
                    android:textColor="@color/material_light_black"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/cmd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/spinnerTypeScan"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/spinnerTypeScan"
                    android:layout_toRightOf="@+id/spinnerTypeScan"
                    android:background="@color/material_grey_400"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:text="DNS"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/filterPcapLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_800"
                android:elevation="4dp"
                android:padding="8dp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/lineFilterProto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/titleProtocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Protocole:"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/tcp_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/https_cb"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/https_cb"
                        android:text="TCP"
                        android:textColor="@color/tcp"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/udp_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/https_cb"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/tcp_cb"
                        android:text="UDP"
                        android:textColor="@color/udp"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/https_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/arp_cb"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/arp_cb"
                        android:text="HTTP/S"
                        android:textColor="@color/http"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/arp_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/titleProtocol"
                        android:layout_below="@+id/titleProtocol"
                        android:text="ARP"
                        android:textColor="@color/arp"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/dns_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/ip_cb"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/ip_cb"
                        android:text="DNS"
                        android:textColor="@color/dns"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/ip_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/udp_cb"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/udp_cb"
                        android:text=" IP"
                        android:textColor="@color/material_light_white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lineFilterInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lineFilterProto">

                    <TextView
                        android:id="@+id/titleSection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Section:"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/No_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleSection"
                        android:text="N°"
                        android:textColor="@color/material_light_white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/time_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/No_cb"
                        android:layout_marginLeft="17dp"
                        android:layout_toRightOf="@+id/No_cb"
                        android:text="Timef"
                        android:textColor="@color/material_light_white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/TopBarLayout"
            android:background="@color/material_light_black">

            <TextView
                android:id="@+id/Monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#111111"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingLeft="16dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:text="tcpdump [ -AdDefIKlLnNOpqRStuUvxX ] [Expression]"
                android:textColor="@color/material_light_white"
                android:textStyle="italic"
                android:typeface="normal" />



            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_light_white"
                android:layout_below="@+id/Monitor"
                android:scrollbars="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include
                        android:id="@+id/topBar"
                        layout="@layout/item_tcpdump"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/Output"
                        android:scrollbars="vertical"
                        android:layout_below="@+id/topBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/material_grey_300"
                        tools:listitem="@layout/item_tcpdump" />

                </RelativeLayout>
            </HorizontalScrollView>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/Monitor"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible" />

        </RelativeLayout>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:src="@android:drawable/ic_media_play"
            app:fab_colorNormal="@android:color/holo_blue_light"
            app:fab_colorPressed="@android:color/holo_blue_bright"
            app:fab_elevationCompat="4dp"
            app:fab_progress="0"
            app:layout_anchorGravity="bottom|right|end" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>