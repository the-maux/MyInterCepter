<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Coordonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="200dp"
                android:layout_height="56dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:subtitle="v7.31"
                app:title="Tcpdump">

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/topToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/action_settings"
                android:layout_toRightOf="@+id/toolbar"
                android:focusable="false"
                android:focusableInTouchMode="false">


            </RelativeLayout>

            <ImageView
                android:id="@+id/refresh"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_toStartOf="@+id/action_settings"
                android:src="@android:drawable/ic_menu_add" />

            <ImageButton
                android:id="@+id/action_settings"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:baselineAlignBottom="false"
                android:src="@android:drawable/ic_menu_manage" />

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_grey_800"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:id="@+id/nmapConfEditorLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/material_grey_800"
            android:elevation="4dp"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/targetSelectionner"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/monitorHost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:text="Name" />
            </RelativeLayout>



            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerTypeScan"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/targetSelectionner"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:elevation="4dp"
                android:text="DNS filter"
                android:textColor="@color/material_light_black"
                android:visibility="visible" />

            <EditText
                android:id="@+id/cmd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/spinnerTypeScan"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/spinnerTypeScan"
                android:layout_toRightOf="@+id/spinnerTypeScan"
                android:background="@color/material_grey_400"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="DNS"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                android:focusableInTouchMode="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/nmapConfEditorLayout"
            android:background="@color/material_light_black">

            <TextView
                android:id="@+id/Monitor"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="#111111"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="tcpdump -i wlan0 -l -vv  -s 0 -vvvx ' dst port 53'"
                android:textStyle="italic"
                android:typeface="monospace" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/Monitor"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/Output"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/Monitor"
                android:background="@color/material_light_black"
                android:maxLines="200"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:text="@string/tcpDumpBlabla"
                android:textColor="@color/material_light_white"
                android:textSize="12sp" />
        </RelativeLayout>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:src="@android:drawable/ic_media_play"
            app:fab_colorNormal="@android:color/holo_blue_light"
            app:fab_colorPressed="@android:color/holo_blue_bright"
            app:fab_elevationCompat="4dp"
            app:fab_progress="0"
            app:layout_anchorGravity="bottom|right|end" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>