<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Coordonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashscreen">

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/LL_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="32dp"
            android:alpha="0.9"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="#212121"
                    android:elevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp">

                    <RelativeLayout

                        android:id="@+id/ArpButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/monitorICMP"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"

                            />

                        <TextView
                            android:id="@+id/ArpTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            android:text="ICMP Attack"
                            android:textColor="@color/material_light_white"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:src="@drawable/cage" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="#212121"
                    android:elevation="4dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/NmapButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/monitorNmap"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"

                            />

                        <TextView
                            android:id="@+id/NmapTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            android:text="Nmap"
                            android:textColor="@color/material_light_white"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:src="@drawable/nmap" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="#212121"
                    android:elevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/MitmButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/monitorIntecept"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            app:civ_border_color="@color/primary_text"
                            app:civ_border_width="1px" />

                        <TextView
                            android:id="@+id/MitmTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            android:text="Intercept"
                            android:textColor="@color/material_light_white"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:src="@mipmap/ic_spy" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="#212121"
                    android:elevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp">

                    <RelativeLayout

                        android:id="@+id/DnsButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/monitorDNS"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            app:civ_border_color="@color/primary_text"
                            app:civ_border_width="1px" />

                        <TextView
                            android:id="@+id/txtDNS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            android:text="DnsSpoof"
                            android:textColor="@color/material_light_white"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:src="@mipmap/ic_dns" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="#212121"
                    android:elevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/WiresharkButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/monitorWireshark"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            app:civ_border_color="@color/primary_text"
                            app:civ_border_width="1px" />

                        <TextView

                            android:id="@+id/WiresharkTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_horizontal"
                            android:text="Wireshark"
                            android:textColor="@color/material_light_white"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:padding="4dp"
                            android:src="@drawable/wireshark" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="#212121"
                    android:elevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/DoraDiagnostic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/monitorDora"
                            android:layout_width="8dp"
                            android:layout_height="8dp"

                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            app:civ_border_color="@color/primary_text"
                            app:civ_border_width="1px" />

                        <TextView
                            android:id="@+id/DoraTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="false"
                            android:layout_marginBottom="12dp"

                            android:gravity="center_horizontal"
                            android:text="Dora Diag"
                            android:textColor="@color/material_light_white"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:src="@drawable/radar1600" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="#212121"
                    android:elevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp">

                    <RelativeLayout

                        android:id="@+id/Metasploit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/monitorMsf"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            app:civ_border_color="@color/primary_text"
                            app:civ_border_width="1px" />

                        <TextView
                            android:id="@+id/MsfTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            android:text="Metasploit"
                            android:textColor="@color/material_light_white"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:src="@drawable/metasploit" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="#212121"
                    android:elevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/SettingsButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/SettingsTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="false"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_horizontal"
                            android:text="Settings"
                            android:textColor="@color/material_light_white"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:src="@drawable/ic_settings_white_24dp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/scylla"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            app:srcCompat="@drawable/scylla_transparent" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>