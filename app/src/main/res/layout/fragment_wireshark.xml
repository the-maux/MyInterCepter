<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rootViewForDashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/verti_035"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />


        <android.support.v7.widget.CardView
            android:id="@+id/cardViewHeader"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:clipToPadding="true"
            app:cardBackgroundColor="@color/generic_background"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/verti_035"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cardLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="right"
                    android:text="Groupe ADEO"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintLeft_toRightOf="@+id/headerWifi"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/headerWifi" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Packets number : 42"
                    app:layout_constraintLeft_toLeftOf="@+id/textView6"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Dump size: 231 Mb"
                    app:layout_constraintLeft_toLeftOf="@+id/textView6"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="3 clients"
                    app:layout_constraintLeft_toLeftOf="@+id/textView6"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <ImageView
                    android:id="@+id/headerWifi"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:cropToPadding="true"
                    android:padding="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="w,1:1"
                    app:layout_constraintHeight_max="150dp"
                    app:layout_constraintHeight_min="40dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_max="80dp"
                    app:layout_constraintWidth_min="40dp"
                    app:srcCompat="@drawable/spy" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dashboard_RV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewHeader" />

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rootViewForLiveFlux"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include
            android:id="@+id/topBar"
            layout="@layout/item_tcpdump_topbar"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@+id/Monitor"
            android:background="@color/cardview_shadow_start_color"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/Monitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wiresharkPrimary"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingStart="16dp"
            android:paddingTop="2dp"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="italic"
            android:typeface="normal"
            android:visibility="gone" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/topBar"
            android:fillViewport="true"
            android:scrollbars="horizontal"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RV_Wireshark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="0.98"
                android:background="@color/black_primary"
                android:scrollbars="vertical"
                tools:listitem="@layout/item_tcpdump" />

        </HorizontalScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>