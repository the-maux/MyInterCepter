<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp">
	<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/icon" android:layout_width="50dp" android:layout_height="50dp"
			android:src="@drawable/monitor"
			android:layout_margin="2dp" android:padding="4dp"/>
	<TextView android:textSize="10sp" android:textColor="#ff0000" android:id="@+id/label"
	          android:layout_width="match_parent" android:layout_height="wrap_content"
	          android:layout_toLeftOf="@+id/icon2" android:layout_toRightOf="@+id/icon"
	          android:layout_alignParentBottom="false" android:layout_alignTop="@+id/icon"
	          android:layout_alignBottom="@+id/icon" android:layout_margin="6dp"
	          tools:text="10.16.186.19\n [AA-BB-CC-DD-EE][unix] [Apple]" android:gravity="center_vertical"/>
	<ImageView android:id="@+id/icon2" android:layout_width="35dp" android:layout_height="50dp"
	           android:src="@android:drawable/checkbox_off_background" android:layout_alignParentTop="true"
	           android:layout_alignParentRight="true"
	           android:layout_margin="2dp" android:padding="6dp"/>
</RelativeLayout>
