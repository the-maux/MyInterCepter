<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.90"
    android:padding="16dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@color/cardview_light_background"
        android:elevation="1dp"
        android:minHeight="50dp"
        android:paddingBottom="4dp"
        android:paddingRight="6dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/switch_sw"
            android:enabled="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:text="Verifier les applis via USB"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/switch_sw"
            android:paddingLeft="8dp"
            android:text="Forcer orient droite Ã  gauche pour toutes langues alors lache rien ty es presque ma guelle il faut juste encore pousser un petit peu"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:textSize="12sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Switch
            android:id="@+id/switch_sw"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>