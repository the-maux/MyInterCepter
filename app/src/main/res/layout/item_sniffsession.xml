<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginTop="8dp"
    android:background="@color/primary_text"
    app:cardCornerRadius="10dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_text"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/menuView"
            android:background="@color/primary_text"
            android:elevation="1dp">

            <TextView
                android:id="@+id/susbtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/diagnosPourcentage"
                android:enabled="false"
                android:text="Groupe ADEO"
                android:textColor="@color/material_light_white"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/susbtitle"
                android:layout_toRightOf="@+id/diagnosPourcentage"
                android:ellipsize="end"
                android:enabled="true"
                android:fontFamily="sans-serif"
                android:gravity="bottom"
                android:lines="1"
                android:maxLines="1"
                android:text="Session de dourges"
                android:textColor="@color/material_light_white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/middleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topView"
            android:background="@color/primary_text"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enregistree le 12 octobre 2017 Ã  18h30, sniffant 18 devices pendant 12 minutes en spoofant le dns avec 3 interception. \n Dump pcap sous le fichier : GROUPE_ADEO_19_01_18h51.pcap"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottomView"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/middleView"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/ACTION1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"
                android:text="Delete"
                android:textAllCaps="true"
                android:textColor="@color/accent_material_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ACTION2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="false"
                android:layout_toRightOf="@+id/ACTION1"
                android:gravity="center_vertical"
                android:text="Detail"
                android:textAllCaps="true"
                android:textColor="@color/accent_material_dark"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/shareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="2dp"
                app:srcCompat="@android:drawable/ic_menu_share" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>