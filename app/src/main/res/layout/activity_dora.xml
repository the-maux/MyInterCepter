<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Coordonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="rootViewTransition">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/doraPrimary"
        android:paddingTop="4dp"
        android:transitionName="appBarTransition"
        app:elevation="6dp">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/topToolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_bar_height"
                android:elevation="6dp"
                android:paddingLeft="8dp">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/icon_toolbar_size"
                    android:layout_height="@dimen/icon_toolbar_size"
                    android:elevation="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/toolbar2"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_max="40dp"
                    app:srcCompat="@mipmap/ic_dora_png" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:transitionName="title_transition"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/searchView"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="5"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_min="@dimen/icon_toolbar_size"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:subtitle="Easy Q.O.S"
                    app:subtitleTextColor="@color/tint_svg"
                    app:title="D.O.R.A"
                    app:titleTextColor="@android:color/primary_text_dark">

                </android.support.v7.widget.Toolbar>


                <ImageView
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="10dp"
                    android:soundEffectsEnabled="true"
                    android:src="@drawable/ic_search_svg"
                    android:tint="@color/tint_svg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/action_add_host"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/toolbar2"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/action_add_host"
                    android:layout_width="@dimen/icon_generic_size"
                    android:layout_height="@dimen/btn_toolbar_size"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:src="@drawable/ic_add_svg"
                    android:tint="@color/tint_svg"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/history"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/searchView"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/history"
                    android:layout_width="@dimen/icon_generic_size"
                    android:layout_height="@dimen/btn_toolbar_size"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:tint="@color/tint_svg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/action_add_host"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_imore_png" />

            </android.support.constraint.ConstraintLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:tabMode="scrollable"
                tools:layout_editor_absoluteY="56dp">

                <android.support.design.widget.TabItem
                    android:id="@+id/radar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TabItem
                    android:id="@+id/signalQuality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Host detail" />
            </android.support.design.widget.TabLayout>

        </android.support.constraint.ConstraintLayout>


    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/progressBarDora"
        style="?android:attr/progressBarStyle"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginRight="7dp"
        android:elevation="5dp"
        android:visibility="gone"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|right|end" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="@dimen/app_bar_height"
        android:layout_height="@dimen/app_bar_height"
        android:layout_marginRight="16dp"
        android:elevation="3dp"
        android:soundEffectsEnabled="true"
        android:src="@drawable/ic_media_play"
        android:visibility="visible"
        app:backgroundTint="@color/primary_dark"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|right|end" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RV_dora"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        tools:listitem="@layout/item_dora" />
</android.support.design.widget.CoordinatorLayout>
