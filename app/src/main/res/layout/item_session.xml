<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="1dp"
    android:alpha="0.90"
    android:padding="16dp"
    app:cardBackgroundColor="@color/cardview_dark_background"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="4dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:elevation="4dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_toLeftOf="@+id/icon2"
            android:layout_toRightOf="@+id/icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:text="13 decembre 2017 Ã  16h42"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/title"
            android:layout_toLeftOf="@+id/icon2"
            android:layout_toRightOf="@+id/icon"
            android:ellipsize="end"
            android:enabled="false"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:text="144 devices decouvert"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/wiresharkMiniLogo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/subtitle"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/icon2"
            android:visibility="gone"
            app:srcCompat="@drawable/wireshark" />

        <ImageView
            android:id="@+id/doraMiniLogo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/subtitle"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/wiresharkMiniLogo"
            android:visibility="gone"
            app:srcCompat="@drawable/radar1600" />

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:elevation="4dp"
            android:src="@mipmap/ic_forward_round" />

    </RelativeLayout>
</android.support.v7.widget.CardView>