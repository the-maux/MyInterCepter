<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Coordonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    tools:context="fr.dao.app.ScrollingActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:paddingBottom="12dp"
        app:elevation="4dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/settings_menu_hostdetail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:elevation="2dp"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="center_vertical"
            app:expandedTitleMarginBottom="18dp"
            app:expandedTitleMarginStart="90dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:statusBarScrim="@drawable/backgroundtransition"
            android:transitionName="hostTitle"
            app:toolbarId="@+id/toolbar">

            <ImageView
                android:id="@+id/collapsBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="2dp"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|snap"
                app:subtitle="424242">

            </android.support.v7.widget.Toolbar>

            <!--app:layout_collapseParallaxMultiplier="0.5"-->
            <!--app:layout_scrollFlags="scroll|snap"-->

            <ImageView
                android:id="@+id/history"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:soundEffectsEnabled="true"
                android:tint="@color/primary_white"
                app:layout_collapseMode="pin"
                app:srcCompat="@drawable/ic_edit_svg" />

            <ImageView
                android:id="@+id/settingsMenuDetail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:soundEffectsEnabled="true"
                android:tint="@color/primary_white"
                app:layout_collapseMode="pin"
                app:srcCompat="@drawable/ic_more_svg" />


        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/generic_background"
            android:elevation="2dp"
            app:layout_scrollFlags="">

        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/generic_background"
        android:fillViewport="true"
        android:paddingTop="12dp"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        tools:context="fr.dao.app.ScrollingActivity">

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@+id/tabs"
            android:background="@color/generic_background"
            tools:layout="@layout/fragment_hostdetail" />

    </android.support.v4.widget.NestedScrollView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="216dp"
        android:tint="@color/primary_white"
        android:transitionName="fabTransition"
        app:elevation="10dp"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="end"
        app:layout_behavior="fr.dao.app.View.Behavior.Coordinator.HostDetail.FAMCollapseBehavior"
        app:menu_icon="@mipmap/ic_action"
        app:menu_openDirection="down"
        fab:menu_animationDelayPerItem="50"
        fab:menu_colorNormal="@color/fab_color"
        fab:menu_colorPressed="#414141"
        fab:menu_colorRipple="#343434"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="14sp">

    </com.github.clans.fab.FloatingActionMenu>


    <ImageView
        android:id="@+id/OsImg"
        android:layout_width="60dp"
        android:layout_height="@dimen/app_bar_height"
        android:layout_marginLeft="16dp"
        android:elevation="6dp"
        android:transitionName="hostPicture"
        app:layout_behavior="fr.dao.app.View.Behavior.Coordinator.HostDetail.ImageCollapseBehavior" />


</android.support.design.widget.CoordinatorLayout>
