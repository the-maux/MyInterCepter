<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootViewItemPort"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:layout_marginTop="1dp"
    android:background="@color/cardview_shadow_start_color"
    android:minWidth="650dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_editor_absoluteY="26dp">

    <android.support.constraint.Guideline
        android:id="@+id/guideline060verti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline020verti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <TextView
        android:id="@+id/PORT"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/material_light_white"
        android:ellipsize="start"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:singleLine="true"
        android:text="PORT"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline020verti"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/State"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/material_light_white"
        android:ellipsize="start"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:singleLine="true"
        android:text="STATE"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/guideline020verti"
        app:layout_constraintRight_toLeftOf="@+id/guideline060verti"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Source"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/material_light_white"
        android:ellipsize="start"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:singleLine="true"
        android:text=" Source"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@+id/State"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>