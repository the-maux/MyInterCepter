<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/generic_background">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="5dp"
        android:fontFamily="@font/helvetica_regular"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:text="SSID:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black_primary_light"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintLeft_toLeftOf="@+id/header"
        app:layout_constraintRight_toRightOf="@+id/guideline_midle_hori"
        app:layout_constraintTop_toTopOf="@+id/header"
        app:layout_constraintVertical_bias="0.100000024" />

    <android.support.v7.widget.CardView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/cardview_light_background"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_top_rootView_verti"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </android.support.v7.widget.CardView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_top_rootView_verti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_midle_hori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_verti_75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.70"
        app:layout_constraintTop_toTopOf="@+id/guideline_top_rootView_verti" />

    <android.support.v7.widget.CardView
        android:id="@+id/gateway_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_verti_75"
        app:layout_constraintBottom_toTopOf="@+id/guideline_verti_75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guideline_midle_hori"
        app:layout_constraintTop_toTopOf="@+id/guideline_top_rootView_verti" />

    <android.support.v7.widget.CardView
        android:id="@+id/devices_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/guideline_verti_75"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_midle_hori"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_top_rootView_verti" />

    <android.support.v7.widget.CardView
        android:id="@+id/wireshark_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guideline_midle_hori"
        app:layout_constraintTop_toTopOf="@+id/guideline_verti_75" />

    <android.support.v7.widget.CardView
        android:id="@+id/services_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_midle_hori"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_verti_75" />
</android.support.constraint.ConstraintLayout>