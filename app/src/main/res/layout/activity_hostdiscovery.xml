<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/appbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:elevation="4dp">
			<android.support.constraint.ConstraintLayout
				android:id="@+id/relativeLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/backgroundtransition"
				android:elevation="4dp">


				<ProgressBar
					android:id="@+id/progressBar"
					style="?android:attr/progressBarStyleHorizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/tabs"
					android:background="#00FFFFFF"
					android:visibility="gone"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toTopOf="@+id/guideline2" />

				<ImageView
					android:id="@+id/OsImg"
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:layout_margin="8dp"
					android:elevation="4dp"
					android:transitionName="logo_activity"
					app:layout_constraintBottom_toTopOf="@+id/guideline2"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintWidth_min="40dp"
					app:srcCompat="@mipmap/ic_fingerprint" />

				<android.support.v7.widget.Toolbar
					android:id="@+id/toolbar2"
					android:layout_width="0dp"
					android:layout_height="0dp"
					app:layout_constraintBottom_toTopOf="@+id/guideline2"
					app:layout_constraintLeft_toRightOf="@+id/OsImg"
					app:layout_constraintRight_toLeftOf="@+id/searchView"
					app:layout_constraintTop_toTopOf="parent"
					app:subtitle="Scanning"
					app:title="D.A.O">

				</android.support.v7.widget.Toolbar>

				<android.support.v7.widget.SearchView
					android:id="@+id/searchView"
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:background="@android:color/transparent"
					android:baselineAlignBottom="false"
					android:src="@mipmap/ic_nmap_type_foreground"
					app:layout_constraintBottom_toTopOf="@+id/guideline2"
					app:layout_constraintRight_toLeftOf="@+id/history"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintWidth_min="45dp" />

				<ImageView
					android:id="@+id/history"
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:baselineAlignBottom="false"
					android:src="@mipmap/ic_history_foreground"
					app:layout_constraintBottom_toTopOf="@+id/guideline2"
					app:layout_constraintRight_toLeftOf="@+id/settingsMenu"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintWidth_min="45dp" />

				<ImageView
					android:id="@+id/settingsMenu"
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:paddingLeft="4dp"
					android:paddingRight="4dp"
					app:layout_constraintBottom_toTopOf="@+id/guideline2"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintWidth_min="45dp"
					app:srcCompat="@drawable/ic_more_vert_white_24dp" />


				<android.support.design.widget.TabLayout
					android:id="@+id/tabs"
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:background="@drawable/backgroundtransition"
					android:visibility="gone"
					app:layout_constraintBottom_toTopOf="@+id/guideline2"
					app:layout_constraintHeight_min="56dp"
					app:layout_constraintLeft_toLeftOf="@+id/OsImg"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/OsImg"
					app:layout_constraintTop_toTopOf="parent"
					app:tabMode="scrollable">

				</android.support.design.widget.TabLayout>

				<android.support.constraint.Guideline
					android:id="@+id/guideline2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					app:layout_constraintGuide_begin="65dp" />


			</android.support.constraint.ConstraintLayout>
	</android.support.design.widget.AppBarLayout>

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/fab"
		android:layout_width="56dp"
		android:layout_height="56dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:layout_marginBottom="16dp"
		android:layout_marginEnd="16dp"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_loop_search"
		android:visibility="gone"
		app:backgroundTint="@color/fab_color"
		app:fabSize="normal"
		app:layout_anchor="@id/appbar"
		app:layout_anchorGravity="bottom|right|end" />

	<RelativeLayout
		android:id="@+id/layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">


		<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<FrameLayout
				android:id="@+id/frame_container"
				android:layout_width="0dp"
				android:layout_height="0dp"
				app:layout_constraintBottom_toTopOf="@+id/guideline3"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent"></FrameLayout>

			<TextView
				android:id="@+id/timer"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_margin="8dp"
				android:elevation="4dp"
				android:gravity="left|center_vertical"
				android:lines="1"
				android:paddingBottom="2dp"
				android:paddingLeft="8dp"
				android:paddingTop="4dp"
				android:text="42s"
				android:textColor="@color/accent_material_dark"
				android:textSize="12sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toLeftOf="@+id/message"
				app:layout_constraintRight_toRightOf="@+id/message"
				app:layout_constraintTop_toTopOf="@+id/message" />

			<TextView
				android:id="@+id/message"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:background="@color/primary_text"
				android:gravity="right|center_vertical"
				android:lines="2"
				android:padding="8dp"
				android:text="Gateway: x.x.x.x \n IP: x.x.x.x"
				android:textColor="@color/accent_material_dark"
				android:textSize="12sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintHorizontal_chainStyle="spread"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="@+id/guideline3" />

			<android.support.constraint.Guideline
				android:id="@+id/guideline3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				app:layout_constraintGuide_percent="0.9" />
		</android.support.constraint.ConstraintLayout>

	</RelativeLayout>

</android.support.design.widget.CoordinatorLayout>