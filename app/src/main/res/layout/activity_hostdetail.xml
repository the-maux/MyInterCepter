<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Coordonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|end"
    android:fitsSystemWindows="true"
    app:layout_anchorGravity="bottom|end"
    tools:context=".View.HostDetail.HostDetailActivity">


    <View
        android:id="@+id/myView"
        android:layout_width="@dimen/icon_generic_size"
        android:layout_height="@dimen/icon_generic_size"
        android:layout_gravity="top|left"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/material_deep_orange_100"
        app:layout_collapseMode="pin" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="4dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/settings_menu_hostdetail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collapsing_size"
            android:elevation="2dp"
            android:minHeight="@dimen/collapsing_size_mini"
            android:transitionName="hostTitle"
            app:collapsedTitleGravity="left|center"
            app:contentScrim="@color/generic_background"
            app:expandedTitleGravity="bottom|center_horizontal"
            app:expandedTitleMarginBottom="30dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:toolbarId="@+id/toolbar">

            <ImageView
                android:id="@+id/collapsBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5"
                app:srcCompat="@drawable/bg1_windows" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_bar_height"
                android:layout_marginLeft="@dimen/collapsing_padding_icon1"
                android:layout_marginRight="150dp"
                android:background="@android:color/transparent"
                android:elevation="2dp"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|snap">

            </android.support.v7.widget.Toolbar>

            <ImageView
                android:id="@+id/rescan"
                android:layout_width="@dimen/icon_generic_size"
                android:layout_height="@dimen/icon_generic_size"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/collapsing_padding_icon1"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:padding="2dp"
                android:soundEffectsEnabled="true"
                android:tint="@color/material_light_white"
                android:visibility="visible"
                app:srcCompat="@mipmap/ic_refresh_png"
                fab:layout_collapseMode="pin" />

            <ImageView
                android:id="@+id/history"
                android:layout_width="@dimen/icon_generic_size"
                android:layout_height="@dimen/icon_generic_size"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/collapsing_padding_icon2"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:padding="12dp"
                android:soundEffectsEnabled="true"
                android:tint="@color/material_light_white"
                android:visibility="visible"
                app:layout_collapseMode="pin"
                app:srcCompat="@drawable/ic_edit_svg" />

            <ImageView
                android:id="@+id/settingsMenuDetail"
                android:layout_width="@dimen/icon_generic_size"
                android:layout_height="@dimen/icon_generic_size"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:soundEffectsEnabled="true"
                android:tint="@color/material_light_white"
                android:visibility="visible"
                app:layout_collapseMode="pin"
                app:srcCompat="@mipmap/ic_imore_png" />


            <ImageView
                android:id="@+id/hostDetailIcon1"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|left"
                android:layout_margin="8dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:contentScrim="@android:color/transparent"
                app:layout_behavior="fr.dao.app.View.HostDetail.HostDetailBehavior"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5"
                app:srcCompat="@mipmap/ic_bluetooh_icon" />


            <ImageView
                android:id="@+id/hostDetailIcon3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="55dp"
                android:layout_marginLeft="8dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:contentScrim="@android:color/transparent"
                app:layout_behavior="fr.dao.app.View.HostDetail.HostDetailBehavior"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5"
                app:srcCompat="@mipmap/ic_upnp_icon" />

            <ImageView
                android:id="@+id/hostDetailIcon4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="55dp"
                android:layout_marginRight="8dp"
                app:contentScrim="@android:color/transparent"
                app:layout_behavior="fr.dao.app.View.HostDetail.HostDetailBehavior"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5"
                app:srcCompat="@mipmap/ic_ssh_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/hostDetailIcon2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:layout_margin="8dp"
                android:visibility="gone"
                app:contentScrim="@android:color/transparent"
                app:layout_behavior="fr.dao.app.View.HostDetail.HostDetailBehavior"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5"
                app:srcCompat="@mipmap/ic_web_icon" />

        </android.support.design.widget.CollapsingToolbarLayout>

        <ProgressBar
            android:id="@+id/progressBarDetail"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone" />


        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:layout_gravity="bottom"
            android:background="@color/generic_background"
            android:elevation="2dp"
            app:layout_scrollFlags="snap"
            app:tabIndicatorColor="@color/fab_color"
            app:tabMode="scrollable">

            <android.support.design.widget.TabItem
                android:id="@+id/tabItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tab2" />
        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/generic_background"
        android:fillViewport="true"
        android:paddingTop="12dp"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        tools:context="fr.dao.app.ScrollingActivity">

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@+id/tabs"
            android:background="@color/generic_background" />

    </android.support.v4.widget.NestedScrollView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/OsImg"
        android:layout_width="@dimen/icon_collapsing_size"
        android:layout_height="@dimen/icon_collapsing_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:elevation="4dp"
        android:src="@drawable/windows"
        android:transitionName="hostPicture"
        app:civ_border_color="@color/fab_color"
        app:civ_border_width="2dp"
        app:layout_behavior="fr.dao.app.View.HostDetail.HostDetailBehavior" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fab_marge"
        android:layout_marginTop="@dimen/collapsing_size_fab"
        android:clickable="false"
        android:fillAfter="false"
        android:transitionName="fabTransition"
        android:visibility="visible"
        app:elevation="2dp"
        app:layout_anchor="@id/settings_menu_hostdetail"
        app:layout_anchorGravity="end"
        app:menu_icon="@mipmap/ic_action"
        app:menu_openDirection="down"
        fab:menu_animationDelayPerItem="50"
        fab:menu_colorNormal="@color/fab_color"
        fab:menu_colorPressed="#414141"
        fab:menu_colorRipple="#343434"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="@dimen/text_size_2"
        app:layout_behavior="fr.dao.app.View.HostDetail.HostDetailBehavior"
        >


    </com.github.clans.fab.FloatingActionMenu>


</android.support.design.widget.CoordinatorLayout>
