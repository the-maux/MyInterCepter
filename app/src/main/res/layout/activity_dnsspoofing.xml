<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/topToolbar"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="right">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/filterText"
                    android:addStatesFromChildren="true"
                    android:minWidth="100dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:subtitle="0 site spoofed"
                    app:title="Intercepter">

                </android.support.v7.widget.Toolbar>

                <android.support.v7.widget.SearchView
                    android:id="@+id/filterText"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="false"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@+id/action_add_host" />

                <ImageButton
                    android:id="@+id/action_add_host"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="false"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@+id/showCustomCmd"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_add_circle" />

                <ImageButton
                    android:id="@+id/showCustomCmd"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="false"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more_vert" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>


    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        android:onClick="onFabClick"
        android:src="@mipmap/ic_play"
        app:fab_colorNormal="@android:color/holo_blue_light"
        app:fab_colorPressed="@android:color/holo_blue_bright"
        app:fab_elevationCompat="4dp"
        app:fab_progress_showBackground="false"
        app:fab_showShadow="false"
        app:fab_size="normal"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/menuLayout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:background="?android:attr/colorBackground"
            android:elevation="0dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/action_os_filter"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:text="Filtrer par OS"
                android:textSize="16sp"
                android:visibility="visible" />

            <View
                android:id="@+id/separator1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/action_os_filter"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/action_select_all"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/separator1"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:text="Tout sÃ©lectionner"
                android:textSize="16sp" />

            <View
                android:id="@+id/separator2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/action_select_all"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/action_offline_mode"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/separator2"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:text="Mode hors ligne"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/action_offline_mode"
                android:background="@android:color/darker_gray" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>