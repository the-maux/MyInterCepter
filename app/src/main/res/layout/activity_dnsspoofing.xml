<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dnsSpoofPrimary"
        android:transitionName="appBarTransition"
        app:elevation="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/topToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="right">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/searchView"
                    android:addStatesFromChildren="true"
                    android:minWidth="100dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:title="Dnsmasq">

                </android.support.v7.widget.Toolbar>

                <android.support.v7.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="false"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@+id/action_add_host" />

                <ImageButton
                    android:id="@+id/action_add_host"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="false"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@+id/history"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/ic_add_circle" />

                <ImageButton
                    android:id="@+id/history"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="false"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:src="@drawable/ic_more_vert" />

            </RelativeLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topToolbar"
                android:visibility="visible"
                app:tabMode="scrollable">

                <android.support.design.widget.TabItem
                    android:id="@+id/listSpoof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:soundEffectsEnabled="true"
                    android:text="Domain" />

                <android.support.design.widget.TabItem
                    android:id="@+id/historique"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:soundEffectsEnabled="true"
                    android:text="Console" />

            </android.support.design.widget.TabLayout>

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/generic_background"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">


        <TextView
            android:id="@+id/host"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:padding="4dp"
            android:text="Spoofable domain:"
            android:textColor="@color/material_light_white"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.CardView
            android:id="@+id/spinnerTypeScan_cardiview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:background="@color/generic_background"
            app:cardBackgroundColor="@color/generic_background"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/host">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/dnsSpoof_RV"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                tools:listitem="@layout/item_generic_little">

            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textEmpty"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:elevation="5dp"
            android:text="No domain recorded"
            android:textColor="@color/material_light_white"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintLeft_toLeftOf="@+id/navigation"
            app:layout_constraintRight_toRightOf="@+id/navigation" />

        <include
            android:id="@+id/navigation"
            layout="@layout/item_nav_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:transitionName="navigation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_stop"
            app:backgroundTint="@color/fab_color"
            app:fabSize="normal"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/clipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:elevation="5dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/menuLayout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:background="@color/material_grey_500"
            android:elevation="7dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/action_deleteall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1px"
                android:background="@color/material_light_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:text="Tout supprimer"
                android:textColor="@color/material_light_black"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/action_import"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/action_deleteall"
                android:layout_centerVertical="true"
                android:layout_marginTop="1dp"
                android:background="@color/material_light_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:text="Importer"
                android:textColor="@color/material_light_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/action_export"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/action_import"
                android:layout_centerVertical="true"
                android:layout_marginTop="1dp"
                android:background="@color/material_light_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:text="Exporter"
                android:textColor="@color/material_light_black"
                android:textSize="14sp"
                android:typeface="sans" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>