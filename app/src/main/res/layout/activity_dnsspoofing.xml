<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dnsSpoofPrimary"
        android:transitionName="appBarTransition"
        app:elevation="4dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/topToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:elevation="6dp"
            android:paddingLeft="8dp">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/icon_toolbar_size"
                android:layout_height="@dimen/icon_toolbar_size"
                android:elevation="4dp"
                android:padding="8dp"
                android:tint="@color/tint_svg"
                android:transitionName="wiresharkIcon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/toolbar2"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="40dp"
                app:srcCompat="@drawable/ic_dns_btnbar" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/searchView"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_min="@dimen/icon_toolbar_size"
                app:layout_scrollFlags="scroll|enterAlways"
                app:subtitle="Spoofing D.N.S"
                app:subtitleTextColor="@color/tint_svg"
                app:title="Dnsmasq"
                app:titleTextColor="@android:color/primary_text_dark">

            </android.support.v7.widget.Toolbar>


            <ImageView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                android:soundEffectsEnabled="true"
                android:src="@drawable/ic_search_svg"
                android:tint="@color/tint_svg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/action_add_host"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/toolbar2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/action_add_host"
                android:layout_width="@dimen/icon_generic_size"
                android:layout_height="@dimen/btn_toolbar_size"
                android:background="@android:color/transparent"
                android:soundEffectsEnabled="true"
                android:src="@drawable/ic_add_svg"
                android:tint="@color/tint_svg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/history"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/searchView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/history"
                android:layout_width="@dimen/icon_generic_size"
                android:layout_height="@dimen/btn_toolbar_size"
                android:background="@android:color/transparent"
                android:soundEffectsEnabled="true"
                android:tint="@color/tint_svg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/action_add_host"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_imore_png" />

        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topToolbar"
            app:tabMode="scrollable">

            <android.support.design.widget.TabItem
                android:id="@+id/listSpoof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:text="Domain" />

            <android.support.design.widget.TabItem
                android:id="@+id/historique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:text="Console" />

        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">


        <TextView
            android:id="@+id/host"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:padding="4dp"
            android:text="Spoofable domain:"
            android:textColor="@color/material_light_white"
            android:textSize="@dimen/text_size_4"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textEmpty"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:elevation="5dp"
            android:text="No domain recorded"
            android:textColor="@color/material_light_white"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintLeft_toLeftOf="@+id/navigation"
            app:layout_constraintRight_toRightOf="@+id/navigation" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="@dimen/app_bar_height"
            android:layout_height="@dimen/app_bar_height"
            android:layout_margin="16dp"
            android:src="@drawable/ic_stop"
            app:backgroundTint="@color/dnsSpoofPrimary"
            app:fabSize="normal"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dnsSpoof_RV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/host"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/item_generic_little">

        </android.support.v7.widget.RecyclerView>

        <include
            android:id="@+id/navigation"
            layout="@layout/bottom_navigation_sniff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:transitionName="navigation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/clipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:elevation="5dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/menuLayout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:background="@color/material_grey_500"
            android:elevation="7dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/action_deleteall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1px"
                android:background="@color/material_light_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:text="Tout supprimer"
                android:textColor="@color/material_light_black"
                android:textSize="@dimen/text_size_2"
                android:visibility="visible" />

            <TextView
                android:id="@+id/action_import"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/action_deleteall"
                android:layout_centerVertical="true"
                android:layout_marginTop="1dp"
                android:background="@color/material_light_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:text="Importer"
                android:textColor="@color/material_light_black"
                android:textSize="@dimen/text_size_2" />

            <TextView
                android:id="@+id/action_export"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/action_import"
                android:layout_centerVertical="true"
                android:layout_marginTop="1dp"
                android:background="@color/material_light_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:text="Exporter"
                android:textColor="@color/material_light_black"
                android:textSize="@dimen/text_size_2"
                android:typeface="sans" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>