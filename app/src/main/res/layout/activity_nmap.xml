<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Coordonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/splashscreen">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/primary_text"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/OsImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:elevation="4dp"
                android:src="@drawable/nmap"
                android:transitionName="NmapIconTransition" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:layout_toRightOf="@+id/OsImg"
                app:layout_scrollFlags="scroll|enterAlways"
                app:subtitle="v7.31"
                app:title="Nmap">

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/topToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/settings"
                android:layout_toRightOf="@+id/toolbar"
                android:focusable="false"
                android:focusableInTouchMode="false">


            </RelativeLayout>

            <ImageButton
                android:id="@+id/settings"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/settingsMenu"
                android:background="@android:color/transparent"
                android:baselineAlignBottom="false"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:src="@android:drawable/ic_menu_manage" />

            <ImageView
                android:id="@+id/settingsMenu"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                app:srcCompat="@drawable/ic_more_vert_white_24dp" />

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:id="@+id/nmapConfLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/primary_text"
            android:elevation="2dp"
            android:paddingBottom="6dp"
            android:paddingTop="4dp"
            android:visibility="visible">

            <android.support.v7.widget.CardView
                android:id="@+id/RL_host_cardiview"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toStartOf="@+id/spinnerTypeScan_cardiview"
                android:background="@color/material_light_white"
                app:cardBackgroundColor="@color/material_light_white"
                app:cardCornerRadius="@dimen/cardview_default_radius"
                app:cardElevation="@dimen/cardview_default_elevation">

                <TextView
                    android:id="@+id/targetMonitor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="3 targets"
                    android:textColor="@color/primary_text" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/spinnerTypeScan_cardiview"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/material_light_white"
                app:cardBackgroundColor="@color/material_light_white"
                app:cardCornerRadius="@dimen/cardview_default_radius"
                app:cardElevation="@dimen/cardview_default_elevation">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerTypeScan"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:text="Intense scan j"
                    android:textColor="@color/material_light_black" />

            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nmapConfEditorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nmapConfLayout"
            android:elevation="2dp"
            android:padding="8dp"
            android:visibility="gone"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_text"
                android:elevation="2dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/hostEditextTI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:maxLines="1"
                    android:nextFocusDown="@id/hostEditextTI"
                    app:hintAnimationEnabled="true">

                    <EditText
                        android:id="@+id/hostEditext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:elevation="3dp"
                        android:hint="Host(s)"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="192.168.0.1"
                        android:textSize="16sp"
                        android:typeface="serif" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hostEditextTI"
                    android:elevation="3dp"
                    android:maxLines="1"
                    app:hintAnimationEnabled="true">

                    <EditText
                        android:id="@+id/binParamsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Params"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="-Pn -Sv -w -vv"
                        android:textColorHint="@color/material_light_white"
                        android:textSize="16sp"
                        android:typeface="serif" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/nmapConfEditorLayout">

            <TextView
                android:id="@+id/Monitor"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="#111111"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:text="nmap 192.168.0.1 -Pn -Sv -w -vv"
                android:textColor="@color/material_light_white"
                android:textStyle="italic"
                android:typeface="normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/Output"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/Monitor"
                android:background="#F2000000"
                android:maxLines="200"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitCenter"
            android:src="?android:attr/actionModeWebSearchDrawable"
            app:backgroundTint="@color/material_blue_grey_400"
            app:fabSize="normal"
            app:fab_elevationCompat="4dp"
            app:layout_anchorGravity="bottom|right|end" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>