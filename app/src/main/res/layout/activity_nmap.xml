<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Coordonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/splashscreen">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="appBarTransition"
        android:background="@color/NmapPrimary"
        app:elevation="12dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/NmapPrimary"
            android:elevation="4dp">


            <ImageView
                android:id="@+id/OsImg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:src="@drawable/nmap"
                android:transitionName="NmapIconTransition"
                app:layout_constraintHeight_min="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_min="50dp" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/tabs"
                app:layout_constraintLeft_toRightOf="@+id/OsImg"
                app:layout_constraintRight_toLeftOf="@+id/history"
                app:layout_constraintTop_toTopOf="parent"
                app:subtitle="v6.40"
                app:title="Nmap">

            </android.support.v7.widget.Toolbar>

            <ImageView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:baselineAlignBottom="false"
                android:soundEffectsEnabled="true"
                android:src="@mipmap/ic_nmap_type_foreground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tabs"
                app:layout_constraintRight_toLeftOf="@+id/history"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_min="45dp" />

            <ImageView
                android:id="@+id/history"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:baselineAlignBottom="false"
                android:soundEffectsEnabled="true"
                android:src="@mipmap/ic_script"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tabs"
                app:layout_constraintRight_toLeftOf="@+id/settingsMenu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_min="45dp" />

            <ImageView
                android:id="@+id/settingsMenu"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:soundEffectsEnabled="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tabs"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_min="45dp"
                app:srcCompat="@drawable/ic_more_vert_white_24dp" />


            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/NmapPrimary"
                app:layout_constraintHeight_min="56dp"
                app:layout_constraintLeft_toLeftOf="@+id/OsImg"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/OsImg"
                app:tabMode="scrollable">

                <android.support.design.widget.TabItem
                    android:id="@+id/tabItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tab1" />
            </android.support.design.widget.TabLayout>


        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="16dp"
        android:elevation="12dp"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="9dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_loop_search"
            android:visibility="gone"
            app:backgroundTint="@color/fab_color"
            app:fabSize="normal" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />


    </RelativeLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/generic_background"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:id="@+id/nmapConfLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/primary_text"
            android:paddingBottom="6dp"
            android:paddingTop="4dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/nmapConfEditorLayout"
            app:layout_constraintHeight_min="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.CardView
                android:id="@+id/RL_host_cardiview"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toStartOf="@+id/spinnerTypeScan_cardiview"
                android:background="@color/material_light_white"
                app:cardBackgroundColor="@color/material_light_white"
                app:cardCornerRadius="@dimen/cardview_default_radius"
                app:cardElevation="@dimen/cardview_default_elevation">

                <TextView
                    android:id="@+id/targetMonitor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="3 targets"
                    android:textColor="@color/primary_text" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/spinnerTypeScan_cardiview"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/material_light_white"
                app:cardBackgroundColor="@color/material_light_white"
                app:cardCornerRadius="@dimen/cardview_default_radius"
                app:cardElevation="@dimen/cardview_default_elevation">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerTypeScan"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:text="Intense scan j"
                    android:textColor="@color/material_light_black" />

            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nmapConfEditorLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/nmapConfLayout"
            android:padding="8dp"
            android:visibility="gone"
            android:weightSum="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_text"
                android:elevation="2dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/hostEditextTI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:maxLines="1"
                    android:nextFocusDown="@id/hostEditextTI"
                    app:hintAnimationEnabled="true">

                    <EditText
                        android:id="@+id/hostEditext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:elevation="3dp"
                        android:hint="Host(s)"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="192.168.0.1"
                        android:textSize="16sp"
                        android:typeface="serif" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hostEditextTI"
                    android:elevation="3dp"
                    android:maxLines="1"
                    app:hintAnimationEnabled="true">

                    <EditText
                        android:id="@+id/nmapMonitorParameter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Params"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="-Pn -Sv -w -vv"
                        android:textColorHint="@color/material_light_white"
                        android:textSize="16sp"
                        android:typeface="serif" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_above="@+id/navigation"
            android:layout_below="@+id/nmapConfEditorLayout"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nmapConfLayout">

            <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/dialog_frame" />

        </RelativeLayout>


        <include
            android:id="@+id/navigation"
            layout="@layout/item_nav_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:transitionName="navigation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>