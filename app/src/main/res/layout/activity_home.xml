<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_middle_hori"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_middle_verti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />


    <ImageView
        android:id="@+id/logo_dashboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:alpha="0.8"
        android:elevation="4dp"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_middle_verti"
        app:layout_constraintBottom_toTopOf="@+id/title_dashboard"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintLeft_toLeftOf="@+id/dashboard_card"
        app:layout_constraintRight_toRightOf="@+id/dashboard_card"
        app:layout_constraintTop_toTopOf="@+id/dashboard_card"
        app:srcCompat="@mipmap/ic_dashboard" />

    <ImageView
        android:id="@+id/logo_attack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:alpha="0.8"
        android:elevation="4dp"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toTopOf="@+id/title_attack"
        app:layout_constraintDimensionRatio="4:4"
        app:layout_constraintLeft_toLeftOf="@+id/red_card"
        app:layout_constraintRight_toRightOf="@+id/red_card"
        app:layout_constraintTop_toTopOf="@+id/red_card"
        app:srcCompat="@drawable/spy" />

    <android.support.v7.widget.CardView
        android:id="@+id/blue_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:alpha="0.8"
        app:cardBackgroundColor="@color/material_blue_900"
        app:cardCornerRadius="@dimen/material_component_button_corner_radius"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/guideline_middle_hori"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle_verti"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="@+id/guideline_top"
        app:layout_constraintVertical_bias="0.51" />

    <android.support.v7.widget.CardView
        android:id="@+id/dashboard_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        app:cardBackgroundColor="@color/material_purple_900"
        app:cardCornerRadius="@dimen/material_component_button_corner_radius"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/guideline_middle_hori"
        app:layout_constraintDimensionRatio="10:9"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="@+id/guideline_middle_verti"
        app:layout_constraintTop_toTopOf="@+id/guideline_top"
        app:layout_constraintVertical_bias="1.0" />


    <android.support.v7.widget.CardView
        android:id="@+id/settings_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        app:cardBackgroundColor="@color/material_blue_grey_700"
        app:cardCornerRadius="@dimen/material_component_button_corner_radius"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_bottom"
        app:layout_constraintDimensionRatio="10:9"
        app:layout_constraintEnd_toEndOf="@+id/blue_card"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_left"
        app:layout_constraintRight_toRightOf="@+id/guideline_middle_verti"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="@+id/guideline_middle_hori"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.v7.widget.CardView
        android:id="@+id/red_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.8"
        app:cardBackgroundColor="@color/material_red_900"
        app:cardCornerRadius="@dimen/material_component_button_corner_radius"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_bottom"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_middle_verti"
        app:layout_constraintRight_toRightOf="@+id/guideline_right"
        app:layout_constraintTop_toTopOf="@+id/guideline_middle_hori">

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/title_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/helvetica_regular"
        android:text="ATTACK"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/red_card"
        app:layout_constraintLeft_toLeftOf="@+id/red_card"
        app:layout_constraintRight_toRightOf="@+id/red_card"
        app:layout_constraintTop_toTopOf="@+id/red_card"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/title_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/helvetica_regular"
        android:text="DEFENSE"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/blue_card"
        app:layout_constraintLeft_toLeftOf="@+id/blue_card"
        app:layout_constraintRight_toRightOf="@+id/blue_card"
        app:layout_constraintTop_toTopOf="@+id/blue_card"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/title_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/helvetica_regular"
        android:text="Dashboard"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/dashboard_card"
        app:layout_constraintLeft_toLeftOf="@+id/dashboard_card"
        app:layout_constraintRight_toRightOf="@+id/dashboard_card"
        app:layout_constraintTop_toTopOf="@+id/dashboard_card"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/title_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/helvetica_regular"
        android:text="Settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/settings_card"
        app:layout_constraintLeft_toLeftOf="@+id/settings_card"
        app:layout_constraintRight_toRightOf="@+id/settings_card"
        app:layout_constraintTop_toTopOf="@+id/settings_card"
        app:layout_constraintVertical_bias="0.8" />

    <ImageView
        android:id="@+id/logo_defense"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:alpha="0.8"
        android:elevation="4dp"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toTopOf="@+id/title_defense"
        app:layout_constraintDimensionRatio="4:4"
        app:layout_constraintLeft_toLeftOf="@+id/blue_card"
        app:layout_constraintRight_toRightOf="@+id/blue_card"
        app:layout_constraintTop_toTopOf="@+id/blue_card"
        app:srcCompat="@drawable/unknow" />

    <ImageView
        android:id="@+id/logo_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:alpha="0.8"
        android:elevation="4dp"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_middle_verti"
        app:layout_constraintBottom_toTopOf="@+id/title_settings"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintLeft_toLeftOf="@+id/settings_card"
        app:layout_constraintRight_toRightOf="@+id/settings_card"
        app:layout_constraintTop_toTopOf="@+id/settings_card"
        app:srcCompat="@mipmap/ic_settings_wireshark" />

