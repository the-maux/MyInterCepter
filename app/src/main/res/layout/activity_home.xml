        <include
            android:id="@+id/monitorRoot"
            layout="@layout/monitor_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:maxWidth="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/monitorPermission"
            app:layout_constraintStart_toStartOf="@+id/blue_card"
            app:layout_constraintTop_toBottomOf="@+id/red_card"
            app:layout_constraintVertical_bias="0.8" />

        <include
            android:id="@+id/monitorPermission"
            layout="@layout/monitor_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:maxWidth="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/monitorUpdated"
            app:layout_constraintStart_toEndOf="@+id/monitorRoot"
            app:layout_constraintTop_toBottomOf="@+id/red_card"
            app:layout_constraintVertical_bias="0.8" />

        <include
            android:id="@+id/monitorUpdated"
            layout="@layout/monitor_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:maxWidth="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/red_card"
            app:layout_constraintStart_toEndOf="@+id/monitorPermission"
            app:layout_constraintTop_toBottomOf="@+id/red_card"
            app:layout_constraintVertical_bias="0.8" />

    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>