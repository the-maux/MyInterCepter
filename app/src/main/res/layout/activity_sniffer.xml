<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Coordonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/snifferPrimary"
        android:transitionName="appBarTransition"
        android:visibility="visible"
        app:elevation="6dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/appBarConstraint"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:elevation="6dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:visibility="visible">


            <ImageView
                android:id="@+id/OsImg"
                android:layout_width="@dimen/icon_toolbar_size"
                android:layout_height="0dp"
                android:elevation="4dp"
                android:padding="8dp"
                android:tint="@color/tint_svg"
                android:transitionName="wiresharkIcon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/toolbar"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="40dp" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/history"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintStart_toEndOf="@+id/OsImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="scroll|enterAlways"
                app:subtitleTextColor="@color/tint_svg"
                app:title="mon Text nest pas ici"
                app:titleTextColor="@android:color/primary_text_dark">

            </android.support.v7.widget.Toolbar>


            <ImageView
                android:id="@+id/history"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:soundEffectsEnabled="true"
                android:src="@drawable/pcapfile"
                android:tint="#85cccccc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/SwitchViewBackBtn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/SwitchViewBackBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:soundEffectsEnabled="true"
                android:src="@drawable/ic_flip_to_front_svg"
                android:tint="@color/tint_svg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/settingsMenu"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/history"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/settingsMenu"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:soundEffectsEnabled="true"
                android:tint="@color/tint_svg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/SwitchViewBackBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_more_svg" />

        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_shadow_start_color"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">


        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/navigation">

        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/fab"
            android:layout_alignBottom="@+id/fab"
            android:layout_alignLeft="@+id/fab"
            android:layout_alignRight="@+id/fab"
            android:layout_alignTop="@+id/fab"
            android:layout_marginBottom="-12dp"
            android:layout_marginLeft="-12dp"
            android:layout_marginRight="-12dp"
            android:layout_marginTop="-12dp"
            android:elevation="6dp"
            android:visibility="gone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_above="@+id/navigation"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:soundEffectsEnabled="true"
            android:src="@drawable/ic_media_play"
            app:backgroundTint="@color/snifferPrimary"
            app:fabSize="normal" />

        <include
            android:id="@+id/navigation"
            layout="@layout/bottom_navigation_sniff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:transitionName="navigation" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>