<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:alpha="0.90"
    android:padding="16dp"
    app:cardBackgroundColor="@color/cardview_dark_background"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="4dp">

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignRight="@+id/icon"
            android:layout_alignTop="@+id/icon"
            android:layout_marginRight="4dp"
            android:layout_marginTop="12dp"
            android:elevation="5dp"
            android:transitionName="hostPicture" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:elevation="4dp"
            android:src="@drawable/android_logo"
            android:transitionName="hostPicture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/icon"
            android:layout_toStartOf="@+id/checkbox_selected"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ipHostname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="192.128.0.28 (tnbl037421.hq.fr.corp.leroymerlin.com)"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12sp"
                android:transitionName="hostTitle" />

            <TextView
                android:id="@+id/mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:text="[B8-81-60-9C-C4-7A]"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"
                android:transitionName="hostTitle"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/os"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="[Windows]"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Intel Corporate"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"
                android:visibility="visible" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:padding="6dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>