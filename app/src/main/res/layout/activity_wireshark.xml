<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Coordonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:animationCache="true">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wiresharkPrimary"
        android:transitionName="appBarTransition"
        android:visibility="visible"
        app:elevation="6dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/appBarConstraint"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:elevation="6dp"
            android:paddingLeft="8dp"
            android:visibility="visible">


            <ImageView
                android:id="@+id/OsImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="4dp"
                android:padding="2dp"
                android:tint="@color/material_light_white"
                android:transitionName="wiresharkIcon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="40dp" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/SwitchViewBackBtn"
                app:layout_constraintStart_toEndOf="@+id/OsImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="scroll|enterAlways"
                app:title="wireshark">

            </android.support.v7.widget.Toolbar>

            <ImageView
                android:id="@+id/SwitchViewBackBtn"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:padding="8dp"
                android:soundEffectsEnabled="true"
                android:src="@drawable/ic_flip_to_front_svg"
                android:tint="@color/material_light_white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/settingsMenu"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/history"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:padding="8dp"
                android:soundEffectsEnabled="true"
                android:src="@drawable/ic_history_svg"
                android:tint="@color/material_light_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/SwitchViewBackBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/settingsMenu"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_marginRight="8dp"
                android:padding="4dp"
                android:soundEffectsEnabled="true"
                android:tint="@color/material_light_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_more_svg" />

        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_shadow_start_color"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">


        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/navigation">

        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/fab"
            android:layout_alignBottom="@+id/fab"
            android:layout_alignLeft="@+id/fab"
            android:layout_alignRight="@+id/fab"
            android:layout_alignTop="@+id/fab"
            android:layout_marginBottom="-12dp"
            android:layout_marginLeft="-12dp"
            android:layout_marginRight="-12dp"
            android:layout_marginTop="-12dp"
            android:elevation="6dp"
            android:visibility="gone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_above="@+id/navigation"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:soundEffectsEnabled="true"
            android:src="@drawable/ic_media_play"
            app:backgroundTint="@color/fab_color"
            app:fabSize="normal" />

        <include
            android:id="@+id/navigation"
            layout="@layout/item_nav_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:transitionName="navigation"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>