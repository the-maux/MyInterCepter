<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Coordonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg12">

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:text="Sniffing" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RV_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_layout"
            android:elevation="2dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/monitor_card" />

        <ImageView
            android:id="@+id/scylla"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            app:srcCompat="@drawable/scylla_transparent" />

        <ImageView
            android:id="@+id/logo_defense2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:alpha="0.8"
            android:focusableInTouchMode="false"
            android:tint="@android:color/primary_text_dark"
            android:transitionName="logo_defense2"
            app:layout_constraintBottom_toTopOf="@+id/title_defense"
            app:layout_constraintDimensionRatio="4:4"
            app:layout_constraintLeft_toLeftOf="@+id/blue_card"
            app:layout_constraintRight_toRightOf="@+id/blue_card"
            app:layout_constraintTop_toTopOf="@+id/blue_card"
            app:srcCompat="@drawable/unknow" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>