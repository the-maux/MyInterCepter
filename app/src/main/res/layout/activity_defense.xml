<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Coordonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="rootViewTransition">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_primary_light"
        android:transitionName="appBarTransition"
        app:elevation="4dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/toptoolbar2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:elevation="6dp"
            android:paddingLeft="8dp"
            android:visibility="visible">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/icon_toolbar_size"
                android:layout_height="0dp"
                android:elevation="4dp"
                android:padding="2dp"
                android:soundEffectsEnabled="true"
                android:tint="@color/blueteam_color"
                android:transitionName="logo_defense2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/toolbar2"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="40dp"
                app:layout_constraintWidth_min="@dimen/icon_toolbar_size"
                app:srcCompat="@drawable/ic_security_svg" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/searchView"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="scroll|enterAlways"
                app:subtitle="Blue team"
                app:subtitleTextColor="@color/tint_svg"
                app:title="Defense"
                app:titleTextColor="@android:color/primary_text_dark">

            </android.support.v7.widget.Toolbar>


            <ImageView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                android:soundEffectsEnabled="true"
                android:src="@drawable/ic_search_svg"
                android:tint="@color/tint_svg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/action_add_host"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/toolbar2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/action_add_host"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:soundEffectsEnabled="true"
                android:src="@drawable/ic_list_svg"
                android:tint="@color/tint_svg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/settingsMenu"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/searchView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/settingsMenu"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:soundEffectsEnabled="true"
                android:tint="@color/tint_svg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/action_add_host"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_more_svg" />

        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg3"
        android:visibility="gone"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:text="Sniffing" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RV_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_layout"
            android:elevation="2dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/monitor_card" />

        <ImageView
            android:id="@+id/scylla"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            app:srcCompat="@drawable/scylla_transparent" />

        <ImageView
            android:id="@+id/logo_defense2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:alpha="0.8"
            android:focusableInTouchMode="false"
            android:tint="@android:color/primary_text_dark"
            app:layout_constraintBottom_toTopOf="@+id/title_defense"
            app:layout_constraintDimensionRatio="4:4"
            app:layout_constraintLeft_toLeftOf="@+id/blue_card"
            app:layout_constraintRight_toRightOf="@+id/blue_card"
            app:layout_constraintTop_toTopOf="@+id/blue_card"
            app:srcCompat="@drawable/ic_security_svg" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>