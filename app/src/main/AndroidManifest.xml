<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.allycs.app">

    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Controller.Core.Configuration.ApplicationControl"
        android:allowBackup="true"
        android:icon="@drawable/ico"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".View.Activity.Startup.SplashscreenActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".View.Activity.Startup.SetupActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".View.Activity.DnsSpoofing.DnsActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".View.Activity.HostDiscovery.HostDiscoveryActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".View.Activity.Settings.SettingsActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".View.Activity.Scan.NmapActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".View.Activity.TargetMenu.TargetMenuActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".View.Activity.Tcpdump.WiresharkActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".View.Activity.Dora.DoraActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".View.Activity.WebServer.WebServerActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".View.Activity.HostDetail.HostDetailActivity" />

        <meta-data android:name="AA_MODELS"
            android:value="
            fr.allycs.app.Model.Target.Host,
            fr.allycs.app.Model.Target.ExternalHost,
            fr.allycs.app.Model.Target.AccessPoint,
            fr.allycs.app.Model.Target.Session,
            fr.allycs.app.Model.Target.SniffSession,
            fr.allycs.app.Model.Net.Pcap,
            fr.allycs.app.Model.Unix.DNSLog" />
        <meta-data android:name="AA_DB_NAME" android:value="ScyllaDatabase" />
        <meta-data android:name="AA_DB_VERSION" android:value="6" />
    </application>

</manifest>